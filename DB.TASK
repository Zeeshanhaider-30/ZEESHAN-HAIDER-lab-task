<?php
error_reporting(E_ALL);
ini_set('display_errors', 1);

// Connect to MySQL
$conn = new mysqli("localhost", "root", "");

if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

// Create Database
$conn->query("CREATE DATABASE IF NOT EXISTS lab_db");
$conn->select_db("lab_db");

// Create Table (without dropping)
$conn->query("CREATE TABLE IF NOT EXISTS students (
    id INT AUTO_INCREMENT PRIMARY KEY,
    full_name VARCHAR(100),
    email VARCHAR(100),
    phone VARCHAR(20),
    gender VARCHAR(10),
    course VARCHAR(50),
    city VARCHAR(50),
    age INT,
    registration_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
)");

// INSERT
if(isset($_POST['add'])){
    $name = $_POST['name'];
    $email = $_POST['email'];
    $phone = $_POST['phone'];
    $gender = $_POST['gender'];
    $course = $_POST['course'];
    $city = $_POST['city'];
    $age = $_POST['age'];

    $conn->query("INSERT INTO students (full_name,email,phone,gender,course,city,age)
    VALUES ('$name','$email','$phone','$gender','$course','$city','$age')");
}

// DELETE
if(isset($_GET['delete'])){
    $id = $_GET['delete'];
    $conn->query("DELETE FROM students WHERE id=$id");
    header("Location: db.php");
}

// EDIT (Fetch Data)
$editData = null;
if(isset($_GET['edit'])){
    $id = $_GET['edit'];
    $resultEdit = $conn->query("SELECT * FROM students WHERE id=$id");
    $editData = $resultEdit->fetch_assoc();
}

// UPDATE
if(isset($_POST['update'])){
    $id = $_POST['id'];
    $name = $_POST['name'];
    $email = $_POST['email'];
    $phone = $_POST['phone'];
    $gender = $_POST['gender'];
    $course = $_POST['course'];
    $city = $_POST['city'];
    $age = $_POST['age'];

    $conn->query("UPDATE students SET
        full_name='$name',
        email='$email',
        phone='$phone',
        gender='$gender',
        course='$course',
        city='$city',
        age='$age'
        WHERE id=$id");

    header("Location: db.php");
}

// Fetch All Records
$result = $conn->query("SELECT * FROM students");
?>

